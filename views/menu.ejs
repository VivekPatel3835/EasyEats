<% include partials/_head %>

<main>
  <div class="container">
      <div class="row">
        <div class="col-md-2 sidebar">
            <h3>Categories</h3>
            <ul>
                <li>Cat 1</li>
                <li>Cat 2</li>
            </ul>
        </div>
        <div class="col-md-8 main_content">
            <% for(let item of res) {%>
            <div class="col-md-4 menu_item">
                <img src="http://lorempixel.com/50/50/food/1">
                <span><%= item.type%></span>
                <h3><%= item.name%></h3>
                <p><%= item.description %></p>
                <h4>$<%= item.price%></h4>

            </div>
            <% }%>

        </div>
        <div class="col-md-2 sidebar">
         <h3>item.name</h3>
         <div class="row checkout_row">
            <div class="col-md-12 inner_div">
                <h4></h4>
                <div class="edit_buttons">
                    <a href="">Edit</a>
                    <a href="">Delete</a>
                </div>
                <p>item.description</p>
                <h5>item.price</h5>
                <span class="quantity">Quantity</span>
            </div>
        </div>

        <div class="checkout_option">
            <p class="button text-center"><a href="#">Checkout</a></p>
            <p class="button text-center"><a href="#">Cancel</a></p>
        </div>


    </div>

</div>

</div>


</main>
<script type="text/javascript" src="/scripts/cart.js"></script>
<% include partials/_footer %>
