<% include partials/_head %>

<main class="menu">
   <% include partials/_header %>
   <div class="row top_header_image">
        <h2>Menu</h2>
   </div>
   <div class="container">
      <div class="row">
         <div class="col-md-2 sidebar">
            <h3>Categories</h3>
            <ul>
               <li>Cat 1</li>
               <li>Cat 2</li>
           </ul>
       </div>
       <div class="col-md-8 main_content">
           <% for(let item of results) {%>
           <div class="col-md-6 menu_item">
              <img src="http://lorempixel.com/100/100/food/1">
              <span class="item_type"><%=item.type%></span>
              <div class="content">
                <h3><%= item.name%></h3>
                <p><%= item.description%></p>

                <h4>$<%= item.price%></h4>
                <span class='menu_item_id' style='display: none'> <%= item.id%></span>
                <div class="quantity_counter">
                  <span class="plus_button">
                    <button type="button" class="quantity-left-minus btn btn-number"  data-type="minus" data-field="">
                      <span class="glyphicon glyphicon-minus"></span>
                    </button>
                  </span>
                  <input type="text" id="quantity" name="quantity" class="form-control input-number quantity" value="1" min="1" max="100">
                  <span class="minus_button">
                    <button type="button" class="quantity-right-plus btn btn-number" data-type="plus" data-field="">
                      <span class="glyphicon glyphicon-plus"></span>
                    </button>
                  </span>
                </div>
              </div>
          </div>
          <% } %>
      </div>
      <div class="col-md-2 checkout_area sidebar">
          <h3>Checkout Cart</h3>
          <% for(let item of myOrder) {%>
          <div class="row checkout_row">
            <div class="col-md-12 inner_div">
              <div class="edit_buttons">
                  <a href="">Edit</a>
                  <a href="">Delete</a>
              </div>

               <h4><%= item.name %></h4>

              <p><%= item.description %></p>
              <h5>$ <%= item.price %></h5>
              <span class="quantity">Quantity: <%= item.quantity%></span>
          </div>
      </div>
      <% } %>
      <% let totalprice = 0; %>
      <% for(let item of myOrder) {%>
      <% totalprice += (item.price * item.quantity)%>
      <% } %>
      <span class="total_cart_items"> Total: $ <%= totalprice%></span>
      <div class="checkout_option">
       <a href="#">Checkout</a>
       <a href="#">Cancel</a>
   </div>


</div>

</div>

</div>


</main>
<script type='text/javascript' src='../../scripts/cart.js'></script>
<% include partials/_footer %>
